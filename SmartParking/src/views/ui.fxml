<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <cursor>
        <Cursor fx:constant="DEFAULT"/>
    </cursor>
    <TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
             prefHeight="700.0" prefWidth="1024.0" tabClosingPolicy="UNAVAILABLE">
        <Tab fx:id="condutoresTab" text="Condutores">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <VBox alignment="CENTER" layoutX="462.0" layoutY="234.0" prefHeight="200.0"
                      prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                        <Label prefHeight="17.0" prefWidth="74.0" text="ID Parque:" textAlignment="CENTER"/>
                        <ComboBox fx:id="idParqueCondutores" prefWidth="150.0"/>
                    </HBox>
                    <TableView fx:id="condutoresTable" prefHeight="600.0" prefWidth="1024.0">
                        <columns>
                            <TableColumn fx:id="columnIDCondutor" minWidth="100.0" maxWidth="100.0" text="ID Condutor"/>
                            <TableColumn fx:id="columnNome" minWidth="200.0" maxWidth="225.0" text="Nome"/>
                            <TableColumn fx:id="columnMatricula" minWidth="80.0" maxWidth="80.0" text="Matricula"/>
                            <TableColumn fx:id="columnIDLugar" minWidth="80.0" maxWidth="80.0" text="ID Lugar"/>
                            <TableColumn fx:id="columnDataEntrada" minWidth="100.0" maxWidth="100.0" text="Data Entrada"/>
                            <TableColumn fx:id="columnDataSaida" minWidth="100.0" maxWidth="100.0" text="Data Saida"/>
                            <TableColumn fx:id="columnEmail" minWidth="200.0" maxWidth="225.0" text="Email"/>
                            <TableColumn fx:id="columnOpcoes" minWidth="125.0" text="Opções"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </AnchorPane>
        </Tab>
        <Tab fx:id="pedidosTab" text="Pedidos">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <VBox layoutX="156.0" layoutY="114.0" prefHeight="671.0" prefWidth="1024.0"
                      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0">
                    <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                        <Label prefHeight="17.0" prefWidth="72.0" text="ID Paque:"
                               textAlignment="CENTER"/>
                        <ComboBox fx:id="idParquePedidos" prefWidth="150.0"/>
                    </HBox>
                    <TableView prefHeight="568.0" prefWidth="1024.0">
                        <columns>
                            <TableColumn fx:id="IDpedido" minWidth="90.0" maxWidth="90.0" text="ID pedido"/>
                            <TableColumn fx:id="nomePedido" minWidth="250.0" maxWidth="250.0" text="Nome"/>
                            <TableColumn fx:id="matriculaPedidos" minWidth="100.0" maxWidth="100.0" text="Matricula"/>
                            <TableColumn fx:id="dataPedido" minWidth="100.0" maxWidth="100.0" text="Data Pedido"/>
                            <TableColumn fx:id="estadoPedido" minWidth="120.0" maxWidth="120.0" text="Estado"/>
                            <TableColumn fx:id="emailPedido" minWidth="250.0" maxWidth="250.0" text="E-mail"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </AnchorPane>
        </Tab>
        <Tab fx:id="estatisticasTab" text="Estatisticas">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <VBox alignment="CENTER_LEFT" layoutX="301.0" layoutY="177.0" prefHeight="171.0"
                      prefWidth="1024.0" AnchorPane.bottomAnchor="500.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <Label prefHeight="17.0" prefWidth="91.0" text="ID Parque:"/>
                    <ComboBox fx:id="idParqueEstatisticas" prefWidth="150.0"/>
                </VBox>
                <VBox alignment="TOP_CENTER" layoutX="210.0" layoutY="166.0" prefHeight="505.0"
                      prefWidth="1024.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="166.0">
                    <Label alignment="CENTER_RIGHT" text="Quantidade de lugares: "/>
                    <TextField fx:id="idTotalLugares" alignment="CENTER"/>
                    <Label alignment="CENTER_RIGHT" text="Lugares Vagos:"/>
                    <TextField fx:id="idLugaresVagos" alignment="CENTER"/>
                    <Label alignment="CENTER_RIGHT" text="Lugares Ocupados:"/>
                    <TextField fx:id="idLugaresOcupados" alignment="CENTER"/>
                    <VBox alignment="CENTER" prefHeight="395.0" prefWidth="1024.0">
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                        <VBox.margin>
                            <Insets/>
                        </VBox.margin>
                        <Label alignment="CENTER_RIGHT" text="Data"/>
                        <DatePicker fx:id="idData"/>
                        <Label alignment="CENTER_RIGHT" text="Taxa de ocupação:"/>
                        <TextField fx:id="idPercentagemOcupacao" alignment="CENTER">
                            <padding>
                                <Insets bottom="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </TextField>
                    </VBox>
                </VBox>
            </AnchorPane>
        </Tab>
    </TabPane>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <Button fx:id="aceitarBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Aceitar">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <Button fx:id="rejeitarBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0"
                mnemonicParsing="false" text="Rejeitar" textAlignment="CENTER">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <Button fx:id="gravarBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="10.0" layoutY="10.0"
                mnemonicParsing="false" text="Gravar" textAlignment="CENTER">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <Button fx:id="sairBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="134.0" layoutY="10.0"
                mnemonicParsing="false" text="Sair" textAlignment="CENTER">
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
    </HBox>
</VBox>
